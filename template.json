{
    "$schema": "http://<hostname>:<port>/schemas/2019-04-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resoureceGroup().location]"
        },
        "serverfarmName": {
            "type": "string",
            "defaultValue": "[concat('Hosting-',resoureceGroup().name)]"
        }
    },
    "resources": [
        {
            "name": "[parameters('serverfarmName')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2019-08-01",
            "location": "[parameters('location')]",
            "sku": {
                "name": "S1"
            }
        },
        {
            "name": "Website",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2019-08-01",
            "kind": "string",
            "location": "[resoureceGroup().location]",
            "tags": {},
            "properties": {
                "serverFarmId": "[parameters('serverfarmName')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms',parameters('serverfarmName'))]"
            ]
        }
    ]
}